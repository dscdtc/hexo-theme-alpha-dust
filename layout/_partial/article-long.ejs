<div class="post">

    <div class="post-header">
        <%- partial('artical-header') %>
    </div>

    <div class="content">

        <!-- Gallery -->
        <% if (item.photos && item.photos.length){ %>
            <%- partial('gallery') %>
        <% } %>

        <!-- Post Content -->
        <%- item.content %>
        <div style="text-align:center;padding:32px 0;color:#ccc;font-size:14px;">
            -------------本文到此结束&nbsp;<i class="fa fa-university"></i>&nbsp;感谢您的阅读-------------
        </div>
        <%- partial('artical-copyright') %>
    </div>

    <%
        var tags = [];
        if(item.tags && item.tags.length) {
            item.tags.forEach(function(tag){
                tags.push('<a href="' + config.root + tag.path + '">' + '<i class="fa fa-tag"></i>' + tag.name + '</a>');
            });
        }
    %>

    <% if(tags.length) { %>
        <div class="post-tags">
            <i class="fa fa-tags" aria-hidden="true"></i>
            <%- tags.join(' ') %>
        </div>
    <% } %>

    <!-- Comments -->
    <% if (theme.comments.livere_uid) { %>
    <div class="comments">
        <%- partial("_partial/comments.ejs") %>
    </div>
    <% } %>

</div>